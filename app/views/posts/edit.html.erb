<% provide(:title, @title) %>
<% provide(:page_specific_javascript, 'posts') %>


<div>
  <div class="bluebox info-page">
    <%= form_for(@post) do |f| %>
    <%= render 'shared/error_messages', :item => @post %>
    <div>
      <%= f.label :title, :class=>"edit-label" %>
      <%= f.text_field :title %>
    </div>

    <%= f.hidden_field :content_html %>
      <div id="wmd-button-bar">
      	<label for="wmd-input" class="edit-label">Body</label>
      	<%= f.submit @btn, :class => "btn span3", :style => "float:right;" %>
      </div>
      <%= f.text_area :content_markdown, :class => "wmd-input", :id => "wmd-input" %>

  		<div class="span8 bluebox" id ="post-wrapper" style="margin-left:-2%;">
			<div class="post tanbox">
			    <div class="post-head">
			        <div class="bluebox post-image">
			            <%= image_tag("shimane_flag.gif", :size => "100%;") %>
			        </div>
			    <p class="post-title" id="title"><%= @post.title %></p>
				<p class="post-date"><br><%= @date %></p>
			    </div>

			    <div class="post-body" style="text-align:left;">
			        <hr class="end-post-section"/>
			        <div id="wmd-preview"></div>
				<hr class="end-post-section"/>
			    </div>
			  <!-- tags
			    <div class="post-tags">
			        <a href="#" class="tag">Programming</a>
			        <a href="#" class="tag">"Off by one" error</a>
			    </div>
			      -->
			</div>
		</div>
    <% end %>
  </div>
</div>


