<div class="post tanbox">
    <div class="post-head">
        <div style = "background-color:#87adb5; height:60px; width:60px; float:left; position:relative; right:75px; border-radius: 50%;">
            <%= image_tag("shimane_flag.gif", :size => "100%;") %>
        </div>
        <h3 style="display:inline; position: relative; right:60px;"><%= post.title %></h3>
        <p style="text-align:left;font-size:12px;color:black; position: relative; right: 60px;"><%= post.created_at.to_s(:pretty) %></p>
        <hr/>
    </div>
    <div class="post-body" style="text-align:left;">
        <%= post.content_html %>
        <hr/>
    </div>
    <div class="post-tags">
        <a href="#" class="tag">Programming</a>
        <a href="#" class="tag">"Off by one" error</a>
    </div>
</div>
