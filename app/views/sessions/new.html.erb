<% provide(:title, "Sign In") %>

<div class="bluebox info-page" stlye="overflow:auto;">
  <div class = "decorative-box" style="float:right; height:180px;">         
    <div class="decorative-circle" style="top:12.5%;">
            <%= image_tag("shimane_flag.gif", :size => "30%") %>
    </div>   
  </div>
  <div class = "decorative-box" style="float:left; height:180px;">  
   <div class="decorative-circle" style="top:12.5%;">
            <%= image_tag("shimane_flag.gif", :size => "30%;") %>
    </div>  
  </div>
  <div class="abstract" style = "display: table; margin: 0 auto;">
    <%= form_for(:session, url: authenticate_path) do |f| %>

      <%= f.label :email, :class => "edit-label" %>
      <%= f.text_field :email %>

      <%= f.label :password, :class => "edit-label" %>
      <%= f.password_field :password %>

      <div style="width:100%">
      <%= f.submit "Sign in", :class => "btn span3" %>
      </div
    <% end %>
  </div>
</div>