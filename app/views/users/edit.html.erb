<% provide(:title, "Edit Account") %>

<div class="bluebox info-page">
  <div class="abstract" style="margin: 0 auto;">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, :class => "edit-label" %>
      <%= f.text_field :name %>

      <%= f.label :email, :class => "edit-label" %>
      <%= f.text_field :email %>

      <%= f.label :password, :class => "edit-label" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password", :class => "edit-label" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Save changes", class: "btn span3", :style => "float:left;" %>
    <% end %>
  </div>
</div>