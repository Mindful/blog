 <div id="sidebar" class="span4 bluebox">
	<div class="sidebar tanbox">
	<%= form_tag search_path, :method => 'get' do %>
	  <p>
	    <%= text_field_tag :search, params[:search] %>
	    <%= submit_tag "Search", :name => nil %>
	  </p>
	<% end %>
	</div>
	<div class="sidebar tanbox">
	<b>Categories:</b></br>
	<% Category.all.each do |category| %>
		<%= link_to category.name, search_category_path(category) %></br>
	<% end %>
	</div>
</div>