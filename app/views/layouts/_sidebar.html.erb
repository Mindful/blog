 <div id="sidebar" class="span4 bluebox">
	<div class="sidebar tanbox" id="search">
	<%= form_tag search_path, :method => 'get' do %>
	    <%= text_field_tag :search, params[:search] %>
	    <%= submit_tag "Search", :name => nil, :style => "margin-bottom:9px" %>
	<% end %>
	</div>
	<div class="sidebar tanbox" id="categories">
	<h3>Categories:</h3>
	<% Category.all.each do |category| %>
		<%= link_to category.name, search_category_path(category) %><br/>
	<% end %>
	</div>
</div>