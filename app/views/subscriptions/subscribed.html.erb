<div id="subscribed" class="subscribed bluebox">
	<a class="boxclose" id="boxclose" href="javascript:closeSubscribedWindow();"></a>
	<div id="subscribed-inner" class="tanbox">
		<p id="subscribed-text"></p>
	</div>
	<% if @resend %>
	  <%= form_tag subscribe_resend_path, { :method => 'post', :remote => true }  do %>
	    <%= submit_tag "Resend Activation Email", :name => nil, :style => "margin-bottom:9px", :onclick => "closeSubscribedWindow();" %>
	  <% end %>
	<div></div>
	<% end %>
</div>